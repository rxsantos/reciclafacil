<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MultiActivity"
        tools:targetApi="31" >

        <!--
             TODO: Before you run your application, you need a Google Maps API key.

             To get one, follow the directions here:

                https://developers.google.com/maps/documentation/android-sdk/get-api-key

             Once you have your API key (it starts with "AIza"), define a new property in your
             project's local.properties file (e.g. MAPS_API_KEY=Aiza...), and replace the
             "YOUR_API_KEY" string in this file with "${MAPS_API_KEY}".
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_API_KEY" />
        <activity
            android:name=".view.ApresentacaoEmpresa"
            android:exported="false" />
        <activity
            android:name=".view.FormCliente"
            android:exported="false" />
        <activity
            android:name=".view.ApresentacaoCliente"
            android:exported="false" />
        <activity
            android:name=".view.FormEmpresa"
            android:exported="false" />
        <activity
            android:name=".view.UsersLoginAdd"
            android:exported="false" />
        <activity
            android:name=".view.ContactLogin"
            android:exported="false" />
        <activity
            android:name=".view.UsersLoginUpdate"
            android:exported="false" />
        <activity
            android:name=".view.ListaPedidos"
            android:exported="false" />
        <activity
            android:name=".view.FormPedidos"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />
        <activity
            android:name=".view.FormColetas"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />
        <activity
            android:name=".view.Registro"
            android:exported="false" />
        <activity
            android:name=".view.RecuperarSenha"
            android:exported="false" />
        <activity
            android:name=".view.Empresa"
            android:exported="false" />
        <activity
            android:name=".view.Cliente"
            android:exported="false" />
        <activity
            android:name=".view.Login"
            android:exported="false" />
        <activity
            android:name=".view.SplashScreen"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>